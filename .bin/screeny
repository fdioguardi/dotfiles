#!/bin/bash

readonly path=$HOME/.screenshots/
readonly date=$(date "+%Y-%m-%d")
readonly files=("$screenshots_path"/*screenshot_date*)
readonly number=${#files[@]}
readonly name=$path/$date-$number.png

if [ "$1" = "cut" ]; then
  cut="-s"
else
  cut=""
fi

maim -o "$cut" | tee "$name" | xclip -selection clipboard -t image/png
feh "$name"
