#
# wm independent hotkeys
#

# terminal emulator
super + Return
    $TERMINAL

# program launcher
super + d
    $HOME/.config/bspwm/scripts/menu.sh

# web browser
super + backslash
    $BROWSER

# console file manager
super + r
    $TERMINAL -e ranger

# GUI file manager
super + a
    thunar

# music player
super + n
    $TERMINAL -e ncspot

# editor
super + v
    $TERMINAL -e $EDITOR

# chat
super + D
    discord

# power management prompt
alt + F4
    $HOME/.config/bspwm/scripts/sysmenu.sh

# take a screenshot
Print
    screeny

# take a partial screenshot
super + shift + s
    screeny cut

# reolad sxhkd
super + Escape
    pkill -USR1 -x sxhkd; sxhkd -c $XDG_CONFIG_HOME/sxhkd/bspwm

#
# adjust media
#

# pause, play, next, previous, controlled by headset
XF86Audio{Pause,Play,Next,Prev}
	playerctl {pause,play,next,previous}

# adjust volume
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

# previous and next, controlled by mouse
button{8,9}
    playerctl {previous,next}

# adjust primary monitorâ€™s brightness
XF86MonBrightness{Up,Down}
    ~/.config/bspwm/scripts/{inc-brightness,dec-brightness} 0.05

# set display orientation
alt + shift + {Up,Down}
	xrandr -o {inverted,normal}
