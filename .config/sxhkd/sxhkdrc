#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	"$TERMINAL"

# program launcher
alt + d
	"$XDG_CONFIG_HOME"/bspwm/scripts/menu.sh launcher

# web browser
alt + w
	"$BROWSER"

# GUI file manager
alt + a
	thunar

# music player
alt + n
	"$TERMINAL" --title ncspot --execute ncspot

# power management prompt
alt + x
	"$XDG_CONFIG_HOME"/bspwm/scripts/menu.sh sysmenu

# take a screenshot
Print
	screeny

# take a partial screenshot
alt + shift + s
	screeny cut

# reolad sxhkd
alt + Escape
	pkill -USR1 -x sxhkd

# lock screen and suspend
super + l
	xset s activate dpms force suspend

#
# adjust media
#

# pause and play with headset
XF86Audio{Pause,Play}
	playerctl play-pause

# next and previous with headset
XF86Audio{Next,Prev}
	playerctl {next,previous}

# adjust volume
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

# adjust volume with mouse gestures
button{8,9}
	amixer set Master 5%{-,+}

# adjust primary monitor’s brightness
XF86MonBrightness{Up,Down}
	"$XDG_CONFIG_HOME"/bspwm/scripts/{inc-brightness,dec-brightness} 0.05 &

# set display orientation
alt + shift + {Up,Down}
	xrandr -o {inverted,normal}

#
# bspwm hotkeys
#

# restart bspwm
alt + Delete
	bspc wm -r

# close current window
alt + q
	bspc node -c

# kill current window
alt + shift + q
	bspc node -k

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# swap the current node and the biggest node
alt + g
	bspc node -s biggest.local

#
# state/flags
#

# toggle between current and last state
alt + {t,p,s,f}
	bspc node -t \~{tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus/swap the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
alt + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus/send the next/previous desktop in the current monitor
alt + {_,shift + } + bracket{left,right}
	bspc {desktop -f,node -d} {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# rotate nodes 90° in the current desktop
alt + {Left,Right}
	bspc node @/ --rotate {+,-}90

#
# preselect
#

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
alt + super + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
alt + super + shift + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
alt + super + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# increase gap size
alt + plus
	bspc config window_gap $(($(bspc config window_gap) + 1 ))

# descrease gap size
alt + underscore
	[ $(bspc config window_gap) -gt "0" ] && bspc config window_gap $(($(bspc config window_gap) - 1 ))

# restore gap size
alt + equal
	"$XDG_CONFIG_HOME"/bspwm/config/desktop_setup.sh
