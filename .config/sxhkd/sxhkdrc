#
# wm independent hotkeys
#

# terminal emulator
super + Return
    $TERMINAL

# program launcher
super + d
    $HOME/.config/bspwm/scripts/menu.sh

# web browser
super + backslash
    $BROWSER

# console file manager
super + r
    $TERMINAL -e ranger

# GUI file manager
super + a
    thunar

# music player
super + n
    $TERMINAL -e ncspot

# editor
super + v
    $TERMINAL -e $EDITOR

# chat
super + D
    discord

# power management prompt
alt + F4
    $HOME/.config/bspwm/scripts/sysmenu.sh

# take a screenshot
Print
    screeny

# take a partial screenshot
super + shift + s
    screeny cut

# reolad sxhkd
super + Escape
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# restart bspwm
super + Delete
    bspc wm -r

# close current window
super + w
    bspc node -c

# kill current window
super + shift + w
    bspc node -k

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# toggle between current and last state
super + {t,p,s,f}
    bspc node -t ~{tiled,pseudo_tiled,floating,fullscreen}

# set display orientation
alt + shift + {Up,Down}
	xrandr -o {inverted,normal}

#
# focus/swap
#

# focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# rotate nodes 90° in the current desktop
super + {Left,Right}
    bspc node @/ --rotate {+,-}90

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# increase/descrease gap size
super + plus
	bspc config window_gap $(($(bspc config window_gap) + 1 ))

# increase/descrease gap size
super + underscore
	[ $(bspc config window_gap) -gt "0" ] && bspc config window_gap $(($(bspc config window_gap) - 1 ))

# restore gap size
super + equal
    "$HOME"/.config/bspwm/config/desktop_setup.sh

#
# adjust media
#

# pause, play, next, previous, controlled by headset
XF86Audio{Pause,Play,Next,Prev}
	playerctl {pause,play,next,previous}

# adjust primary monitor’s brightness
XF86MonBrightness{Up,Down}
    ~/.config/bspwm/scripts/{inc-brightness,dec-brightness} 0.05

# adjust volume
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

# previous and next, controlled by mouse
button{8,9}
    playerctl {previous,next}
