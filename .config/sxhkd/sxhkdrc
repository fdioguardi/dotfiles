#
# wm independent hotkeys
#

# terminal emulator
super + Return
    $TERMINAL

# program launcher
super + d
    $HOME/.config/bspwm/scripts/menu.sh

# web browser
super + backslash
    $BROWSER

# GUI file manager
super + a
    thunar

# music player
super + n
    $TERMINAL --title ncspot --command ncspot

# chat
super + D
    discord & \
    telegram-desktop &

# power management prompt
alt + F4
    $HOME/.config/bspwm/scripts/sysmenu.sh

# take a screenshot
Print
    screeny

# take a partial screenshot
super + shift + s
    screeny cut

# reolad sxhkd
super + Escape
    pkill -USR1 -x sxhkd; sxhkd -c $XDG_CONFIG_HOME/sxhkd/wm_sxhkdrc

# kill steam
alt + F6
    killall steam

#
# adjust media
#

# pause and play with headset
XF86Audio{Pause,Play}
    playerctl play-pause

# next and previous with headset
XF86Audio{Next,Prev}
	playerctl {next,previous}

# adjust volume
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

# adjust volume with mouse gestures
button{8,9}
	amixer set Master 5%{-,+}

# adjust primary monitorâ€™s brightness
XF86MonBrightness{Up,Down}
    ~/.config/bspwm/scripts/{inc-brightness,dec-brightness} 0.05

# set display orientation
alt + shift + {Up,Down}
	xrandr -o {inverted,normal}
