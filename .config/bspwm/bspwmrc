#!/bin/bash
bspc rule -r "*"

## Enviroment
export PATH="${PATH}:$HOME/.bin"

## Autostart
[[ -f $HOME/.config/bspwm/autostart.sh ]] && . $HOME/.config/bspwm/autostart.sh

## Monitors
[[ -f $HOME/.config/bspwm/monitors_setup.sh ]] && . $HOME/.config/bspwm/monitors_setup.sh

## Global Settings
bspc config automatic_scheme	alternate
bspc config initial_polarity	second_child

bspc config split_ratio	    	0.5
bspc config borderless_monocle	true
bspc config gapless_monocle 	true
bspc config single_monocle  	false

bspc config pointer_modifier	    	control
bspc config pointer_action1	        	move
bspc config pointer_action2	        	resize_side
bspc config pointer_action3	        	resize_corner
bspc config click_to_focus	        	none
bspc config focus_follows_pointer	    true
bspc config remove_disabled_monitors	true
bspc config remove_unplugged_monitors	true

## Desktop Settings
bspc config window_gap		12

## Node Settings
bspc config border_width	5 

## Rule Commands
# Desktop 9
bspc rule -a discord desktop=^9 follow=on state=tiled

# Desktop 10
bspc rule -a pavucontrol desktop=^10 follow=off state=floating

## Colors
[[ -f $HOME/.config/bspwm/color_setup.sh ]] && . $HOME/.config/bspwm/color_setup.sh

